<Window x:Class="CK.Windows.App.CustomMsgBox"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:ckcore="clr-namespace:CK.Windows;assembly=CK.Windows.Core"
            SizeToContent="WidthAndHeight"    
            WindowStartupLocation="CenterOwner"
            Title="{Binding Title}"
            ResizeMode="NoResize"
            mc:Ignorable="d"
            Topmost="True">
    <Window.Resources>
        <ckcore:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConv"></ckcore:BooleanToVisibilityConverter>
    </Window.Resources>
    <StackPanel Margin="10">
        <TextBlock Text="{Binding Description}" Margin="0 0 0 15"></TextBlock>
        <CheckBox Visibility="{Binding ShowCheckBox, Converter={StaticResource BooleanToVisibilityConv}}" IsChecked="{Binding IsCheckboxSelected}" Content="{Binding CheckBoxLabel}"></CheckBox>
        <ListBox ItemsSource="{Binding Buttons}" BorderBrush="Transparent" Grid.IsSharedSizeScope="True">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="ButtonGroup"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="{Binding Label}" Command="{Binding ButtonClickCommand}" Margin="5 0" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>
