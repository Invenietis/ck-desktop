<base:CKWindow x:Class="CK.Windows.Demo.DemoVms.CiviKeyTextBuffering"
        xmlns:base="clr-namespace:CK.Windows;assembly=CK.Windows.Core"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="CiviKey Text Buffer" ShowActivated="True" Topmost="True" Height="267" Width="428" WindowStyle="ToolWindow">
    <Grid Width="Auto" Height="Auto">
        <TextBox Name="WorkingBuffer" Margin="10,10,10,119" TextWrapping="Wrap" AcceptsReturn="True" Text="This is a normal TextBox." />
        <Button Name="Send" HorizontalAlignment="Stretch" Margin="10,0,10,61" VerticalAlignment="Bottom" Width="400" Height="53" Click="SendClick">
            <TextBlock Name="SendText" TextWrapping="WrapWithOverflow" HorizontalAlignment="Stretch" Width="Auto" Margin="10,10,10,10">
            Send
            </TextBlock>
        </Button>
        <TextBlock Name="Explanation" TextWrapping="WrapWithOverflow" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Width="Auto" Margin="10,0,10,8">
            The CiciKey Text buffer is an activable CiviKeyWindow (ShowActivated="True") that knows how to send its text to the current target (the window that was previously activated).
        </TextBlock>
    </Grid>
</base:CKWindow>
